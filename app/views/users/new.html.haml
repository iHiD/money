=form_for @user do |f|
    - if @user.errors.any?
        .error_messages
            %h2 Form is invalid
            %ul
                -@user.errors.full_messages.each do |message|
                    %li= messsage
    %p
        = f.label :name
        %br
        = f.text_field :name
    %p
        = f.label :email
        %br
        = f.text_field :email
        
    %p
        = f.label :password
        %br
        = f.text_field :password
        
    %p
        = f.label :password_confirmation
        %br
        = f.text_field :password_confirmation
        
    %p.button= f.submit